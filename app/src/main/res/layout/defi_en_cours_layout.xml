<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="268dp"
    android:layout_height="297dp"
    android:background="@drawable/rectangle">

    <ImageView
        android:id="@+id/imageDefiEnCours"
        android:layout_width="106dp"
        android:layout_height="115dp"
        android:layout_marginBottom="159dp"
        android:layout_marginEnd="81dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="23dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@drawable/emotif_defi_icon" />

    <TextView
        android:id="@+id/titreDefi"
        android:text="@string/editableText"
        android:layout_width="214dp"
        android:layout_height="18dp"
        android:layout_marginBottom="98dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="181dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:fontFamily="@font/montserrat"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeStepGranularity="1sp"
        android:textColor="@color/itemactif"
        />

    <TextView
        android:id="@+id/texteDefi"
        android:text="@string/editableText"
        android:layout_width="236dp"
        android:layout_height="30dp"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="209dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="12sp"
        android:autoSizeStepGranularity="1sp"
        android:textColor="@color/rad_button"
        />

    <ImageButton
        android:id="@+id/checkBoutonDefi"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/ic_check"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="180dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/closeBoutonDefi"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/ic_none"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>